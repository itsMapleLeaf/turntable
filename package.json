{
  "name": "turntable",
  "private": true,
  "engines": {
    "node": "18"
  },
  "packageManager": "pnpm@8.6.1",
  "scripts": {
    "dev": "run-p --race dev:*",
    "dev:remix": "remix dev",
    "dev:routes": "remix-routes -w",
    "build": "remix build",
    "start": "dotenv -- remix-serve build",
    "lint": "remix-routes && run-p --continue-on-error --print-label lint:*",
    "lint:eslint": "eslint --ext js,ts,tsx .",
    "lint:ts": "tsc --noEmit",
    "lint:dprint": "dprint check",
    "format": "remix-routes && run-s --continue-on-error format:*",
    "format:eslint": "pnpm lint:eslint --fix",
    "format:dprint": "dprint fmt"
  },
  "dependencies": {
    "@jessestolwijk/reconnecting-event-source": "^0.1.0",
    "@radix-ui/react-dropdown-menu": "^2.0.5",
    "@radix-ui/react-popover": "^1.0.6",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-tooltip": "^1.0.6",
    "@remix-run/node": "^1.17.1",
    "@remix-run/react": "^1.17.1",
    "clsx": "^1.2.1",
    "downshift": "^7.6.0",
    "isbot": "^3.6.12",
    "lucide-react": "^0.252.0",
    "pretty-ms": "^8.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-virtuoso": "^4.3.11",
    "scraper-edge": "^1.1.0",
    "zod": "^3.21.4",
    "zod-form-data": "^2.0.1"
  },
  "devDependencies": {
    "@itsmapleleaf/configs": "^3.0.1",
    "@remix-run/dev": "^1.17.1",
    "@remix-run/serve": "^1.17.1",
    "@types/cookie": "^0.5.1",
    "@types/eslint": "^8.40.2",
    "@types/node": "^20.3.1",
    "@types/react": "^18.2.14",
    "@types/react-dom": "^18.2.6",
    "dotenv-cli": "^7.2.1",
    "dprint": "^0.37.1",
    "eslint": "^8.43.0",
    "npm-run-all": "^4.1.5",
    "remix-routes": "^1.4.4",
    "tailwindcss": "^3.3.2",
    "typescript": "5.1.3"
  }
}
