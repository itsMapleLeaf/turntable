{
  "extends": "@itsmapleleaf/configs/tsconfig.base",
  "compilerOptions": {
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.cjs",
    "**/*.mjs",
    ".eslintrc.cjs"
  ],
  "exclude": ["**/node_modules/**", "**/build/**", "**/dist/**", "**/.cache/**"]
}
